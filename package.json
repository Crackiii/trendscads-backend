{
  "name": "trendscads-backend",
  "version": "1.0.0",
  "description": "Trends Scads backend",
  "main": "index.js",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "dev": "npm run build && npm run watch",
    "start": "npm run serve",
    "heroku-postbuild": "npm run build",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Crackiii/trendscads-backend.git"
  },
  "author": "Nadeem Ahmad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Crackiii/trendscads-backend/issues"
  },
  "homepage": "https://github.com/Crackiii/trendscads-backend#readme",
  "devDependencies": {
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "nodemon": "^2.0.15",
    "shelljs": "^0.8.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.11.1",
    "axios": "^0.26.1",
    "errorhandler": "^1.5.1",
    "express": "^4.17.3",
    "prisma": "^3.11.1"
  }
}
